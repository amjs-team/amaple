{
  "name": "amaple",
  "version": "1.1.6",
  "description": "Amaple is a Experiential JavaScript single page application framework.",
  "author": "JOU.San <jou@amaple.org>",
  "license": "MIT",
  "main": "index.js",
  "unpkg": "dist/amaple.umd.js",
  "keywords": [
    "amaple",
    "amaplejs",
    "javascript",
    "state-based",
    "spa"
  ],
  "files": [
    "src",
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/amjs-team/amaple/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amjs-team/amaple.git"
  },
  "scripts": {
    "build": "rollup -c scripts/build.js",
    "dev": "rollup -w -c scripts/dev.js",
    "test:unit": "karma start test/unit/karma.unit.conf.js",
    "test:cov": "karma start test/unit/karma.cov.conf.js",
    "test:sauce-firefox": "karma start test/unit/karma.sauce.conf.js firefox",
    "test:sauce-chrome": "karma start test/unit/karma.sauce.conf.js chrome",
    "test:sauce-ie": "karma start test/unit/karma.sauce.conf.js ie",
    "test:sauce-safari": "karma start test/unit/karma.sauce.conf.js safari",
    "test:sauce-mobile": "karma start test/unit/karma.sauce.conf.js mobile",
    "commit": "git-cz",
    "lint": "eslint src scripts test",
    "init": "npm install && node scripts/hooks.js",
    "release": "sh ./scripts/release.sh"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.10",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "jasmine-core": "^2.6.4",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "lodash": "^4.17.4",
    "rollup": "^0.52.1",
    "rollup-plugin-babel": "^2.7.1",
    "shelljs": "^0.7.8",
    "webpack": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
